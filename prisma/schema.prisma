
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Person {
  id          String   @id @default(cuid())
  photo       String?
  name        String   
  address     String?
  phoneNumber String?
  marriedTo   String?
  status      String   @default("uncontacted")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
